<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for @place, :remote => true do |f| %>
        <div class="form-group">
          <%= f.label :address, "Address", class:"col-md-6 offset-md-4 col-form-label" %>
          <div class="col-md-6 ">
            <%= f.input_field :address, class: "form-control" %>
            <%= f.hidden_field :latitude, class: "form-control" %>
            <%= f.hidden_field :longitude, class: "form-control" %>
            <%= hidden_field_tag :push_to_database %>
          </div>
        </div>
        <div class="form-group">
          <%= f.button :submit, class: 'btn btn-primary', :id => "submit_button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
